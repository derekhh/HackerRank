#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    int t;
    cin>>t;
    for(int j=0;j<t;j++)
        {
        long long int n,m=0,l=0,k=0,h=0;
        cin>>n;
        if(n==1)
            {cout<<"YES"<<endl;
             h++;
             }
        long long int *a=new long long int [n];
        for(long long int i=0;i<n;i++)
            {
            cin>>a[i];
            m+=a[i];
        }
        for(long long int i=1;i<n;i++)
            {
            l=l+a[i-1];                  
            if((2*l)==(m-a[i]))
                {
                cout<<"YES"<<endl;
                k++;
                break;
            }
        }
        if(k==0&&h==0)
        {cout<<"NO"<<endl;}
        delete []a;
    }
    return 0;
}
